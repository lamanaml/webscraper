{{> nav }}

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content" style="float:left">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"  style="float:right">&times;</button>
        <h4 class="modal-title" style="float:left">Comment on this Recipe</h4>
      </div>
      <div class="modal-body">
      <div class="row">
 
    <form action="/comment/{{recipe._id}}" method="POST" class="card-panel col s12">
       
        <hr>
        <div class="row">
            <div class="input-field">
                {{!-- <i class="material-icons prefix">perm_identity</i> --}}
                <input id="icon_prefix" type="text" placeholder="Name" name="name" class="validate active">
            </div>
            </div>
          <div class="row">
            <div class="input-field">
                <i class="material-icons prefix"> Comment</i>
                <input id="icon_telephone" type="text" placeholder="Comment" name="comment" class="validate active">
            </div>
            </div>  

        </div>
        <div class="row">
            <div class="input-field">
                <center><input class="btn add-comment-button topnav" type="submit" value="Submit"></center>
            </div>
        </div>
    </form>
</div>
<div class="row">
    <div class="col s2"></div>
    <div class="col s8">
        <h5>Comments:</h5>
        {{#if recipe.comment}}
        {{#each recipe.comment}}
        <div class="card">
            <p id="nameComment">{{name}}</p>
            <p>{{body}}<p>
        </div>
        {{/each}}
        {{else}}
        <p>No Comments Yet.</p>
        {{/if}}

    </div>
</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
{{!-- modal --}}

<div class="jumbotron">
  <h1 class="display-4">Welcome to the Recipe Database</h1>
   <hr class="my-4">
</div>
<div class="container">

      <div class="row">
        {{#each recipe}} 
   
         
            <div class="card" style="width: 18rem;">
                <img src="{{this.image}}" class="card-img-top" alt="...">
                <div class="card-body">
                <p class="card-text"><h5>{{this.title}}</h5></p>
                    <div class="card-body">

                    
          <!-- Trigger the modal with a button -->
          <button type="button" class="btn addbtn btn-info btn-lg " data-toggle="modal" data-target="#myModal">Add Note</button>

                    
                   
                    <a href="#" class="card-link">Delete Article</a>
                    </div>
                </div>
            </div>
       
        {{/each}} 
    </div> 
</div>






